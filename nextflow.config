// default configs for all pipelines; overrides per-pipeline configs

// ANALYSIS LOCATIONS
params.targets_bed = "targets.bed"
params.probes_bed = "probes.bed"
params.samples_analysis_sheet = "samples.analysis.tsv"
params.samples_fastq_sheet = "samples.fastq.tsv"


// REFERENCE FILES
params.ref_fa = "/ifs/data/sequence/results/external/NYU/snuderllab/ref/iGenomes/Homo_sapiens/UCSC/hg19/Sequence/WholeGenomeFasta/genome.fa"
params.ref_fa_bwa_dir = "/ifs/data/sequence/results/external/NYU/snuderllab/ref/BWA/hg19"
params.ref_fai = "/ifs/data/sequence/results/external/NYU/snuderllab/ref/iGenomes/Homo_sapiens/UCSC/hg19/Sequence/WholeGenomeFasta/genome.fa.fai"
params.ref_dict = "/ifs/data/sequence/results/external/NYU/snuderllab/ref/iGenomes/Homo_sapiens/UCSC/hg19/Sequence/WholeGenomeFasta/genome.dict"
params.ref_chrom_sizes = "/ifs/data/sequence/results/external/NYU/snuderllab/ref/Illumina/hg19/chrom.sizes"


// BINARY DEPENDENCIES
params.trimmomatic_jar = "/local/apps/trimmomatic/0.33/trimmomatic-0.33.jar"
params.trimmomatic_contaminant_fa = "/ifs/home/id460/ref/contaminants/trimmomatic.fa"
params.sambamba_bin = "/ifs/home/id460/software/sambamba/sambamba_v0.6.7"

// PROCESSES VALUES
params.beforeScript_str = 'printf "USER:\${USER:-none} JOB_ID:\${JOB_ID:-none} JOB_NAME:\${JOB_NAME:-none} HOSTNAME:\${HOSTNAME:-none} PWD:\$PWD\n"; TIMESTART=\$(date +%s)'
params.afterScript_str = 'printf "elapsed time: %s\n" \$((\$(date +%s) - \${TIMESTART:-0}))'


// NEXTFLOW
process {
  executor='sge'
  queue='all.q'
  clusterOptions = '-cwd'

}

executor {
    queueSize = 250
}

report {
    enabled = true
    file = "nextflow.html"
}

trace {
    enabled = true
    fields = "task_id,hash,native_id,process,tag,name,status,exit,module,container,cpus,time,disk,memory,attempt,submit,start,complete,duration,realtime,queue,%cpu,%mem,rss,vmem"
}
